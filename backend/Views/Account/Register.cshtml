@model Auth.Api.Models.RegisterVm
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketPlace Auth</title>
    <style>
        :root{
            --app-sidenav-width: 240px;
            --main-color: #452829;
            --secondary-color: #E8D1C5;
            --accent-color: #57595B;
            --container-color: #F3E8DF;
            --error-bg: #fff5f5;
            --error-border: #fed7d7;
            --radius: 10px;
            --shadow: 0 12px 40px rgba(11, 15, 30, 0.12);
            --font-stack: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        * { box-sizing: border-box; margin:0; padding:0; }
        html,body{ height:100%; }

        body{
            font-family: var(--font-stack);
            background: linear-gradient(135deg,var(--main-color) 0%, var(--secondary-color) 100%);
            display:flex;
            align-items:center;
            justify-content:center;
            padding:32px;
            min-height:100vh;
            color:var(--main-color);
        }

        .mp-register{
            width:100%;
            max-width:520px;
            background: linear-gradient(180deg, rgba(255,255,255,0.98), rgba(255,255,255,0.96));
            border-radius: calc(var(--radius) + 4px);
            box-shadow: var(--shadow);
            padding:32px;
            border: 1px solid rgba(17,24,39,0.04);
        }

        .mp-header{ display:flex; align-items:center; gap:12px; margin-bottom:18px; }
        .mp-brand{ width:48px; height:48px; border-radius:8px; background: linear-gradient(135deg,var(--main-color),var(--secondary-color)); display:flex; align-items:center; justify-content:center; color:#fff; font-weight:700; font-size:18px; }
        .mp-title h1{ font-size:20px; margin-bottom:2px; color:var(--main-color); }
        .mp-title p{ font-size:13px; color:var(--accent-color); }

        form .form-group{ margin-top:14px; }
        label{ display:block; font-size:13px; color:var(--main-color); margin-bottom:8px; font-weight:600; }

        input[type="text"], input[type="email"], input[type="password"]{
            width:100%; padding:12px 14px; border-radius:8px; border:1px solid rgba(17,24,39,0.08); background:#fff; font-size:14px;
            transition: box-shadow .12s, border-color .12s;
        }

        input:focus{ outline:none; border-color: rgba(69,40,41,0.9); box-shadow: 0 6px 18px rgba(69,40,41,0.12); }

        .btn-create{ width:100%; padding:12px 14px; border-radius:8px; border:none; color:#fff; font-weight:700; background: linear-gradient(90deg,var(--main-color), var(--secondary-color)); cursor:pointer; box-shadow: 0 8px 24px rgba(69,40,41,0.12); font-size:15px; }
        .btn-create:hover{ box-shadow: 0 12px 32px rgba(69,40,41,0.16); }

        .validation-summary{ background: var(--error-bg); border:1px solid var(--error-border); color:#991b1b; padding:12px; border-radius:8px; margin-bottom:12px; font-size:13px; }

        .mp-footer{ margin-top:16px; font-size:13px; color:var(--accent-color); text-align:center; }

        @media (max-width:520px){ .mp-register{ padding:20px; } .mp-brand{ width:44px;height:44px; font-size:16px; } }
    </style>
</head>
<body>
    <div class="mp-register" role="main" aria-labelledby="register-heading">
        <div class="mp-header">
            <div class="mp-brand">MP</div>
            <div class="mp-title">
                <h1 id="register-heading">Create your account</h1>
                <p>Register to MarketPlace</p>
            </div>
        </div>

        <form method="post" asp-controller="Account" asp-action="Register" novalidate>
            <input type="hidden" asp-for="ReturnUrl" />

            <div asp-validation-summary="All" class="validation-summary" role="alert" aria-live="polite"></div>

            <div class="form-group">
                <label asp-for="Name">Full Name</label>
                <input asp-for="Name" type="text" placeholder="Your full name" />
                <span asp-validation-for="Name" class="text-danger" style="color:#b91c1c;font-size:13px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="NationalId">National ID</label>
                <input asp-for="NationalId" type="text" placeholder="National ID" />
                <span asp-validation-for="NationalId" class="text-danger" style="color:#b91c1c;font-size:13px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mobile">Mobile</label>
                <input asp-for="Mobile" type="text" placeholder="05xxxxxxxx" />
                <span asp-validation-for="Mobile" class="text-danger" style="color:#b91c1c;font-size:13px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" placeholder="name@company.com" />
                <span asp-validation-for="Email" class="text-danger" style="color:#b91c1c;font-size:13px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger" style="color:#b91c1c;font-size:13px;"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger" style="color:#b91c1c;font-size:13px;"></span>
            </div>

            <div style="margin-top:18px;">
                <button type="submit" class="btn-create">Create account</button>
            </div>
        </form>

        <div class="mp-footer">
            <p>Already have an account? <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" style="color:var(--main-color);font-weight:600;text-decoration:none;">Sign in</a></p>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
