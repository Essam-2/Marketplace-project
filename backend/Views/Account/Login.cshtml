@model Auth.Api.Models.LoginVm
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketPlace Auth</title>
    <style>
        :root{
            --app-sidenav-width: 240px;
            --main-color: #452829;
            --secondary-color: #E8D1C5;
            --accent-color: #57595B;
            --container-color: #F3E8DF;
            --error-bg: #fff5f5;
            --error-border: #fed7d7;
            --radius: 10px;
            --shadow: 0 12px 40px rgba(11, 15, 30, 0.12);
            --font-stack: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        * { box-sizing: border-box; margin:0; padding:0; }

        html,body { height:100%; }

        body{
            font-family: var(--font-stack);
            background: linear-gradient(135deg,var(--main-color) 0%, var(--secondary-color) 100%);
            display:flex;
            align-items:center;
            justify-content:center;
            padding:32px;
            min-height:100vh;
            color:var(--main-color);
        }

        .mp-login {
            width:100%;
            max-width:480px;
            background: linear-gradient(180deg, rgba(255,255,255,0.98), rgba(255,255,255,0.96));
            border-radius: calc(var(--radius) + 4px);
            box-shadow: var(--shadow);
            padding:32px;
            border: 1px solid rgba(17,24,39,0.04);
        }

        .mp-header {
            display:flex;
            align-items:center;
            gap:12px;
            margin-bottom:20px;
        }

        .mp-brand {
            width:48px;
            height:48px;
            border-radius:8px;
            background: linear-gradient(135deg,var(--main-color),var(--secondary-color));
            display:flex;
            align-items:center;
            justify-content:center;
            color:#fff;
            font-weight:700;
            font-size:18px;
        }

        .mp-title h1{
            font-size:20px;
            margin-bottom:2px;
            color:var(--main-color);
        }

        .mp-title p{
            font-size:13px;
            color:var(--accent-color);
        }

        form .field {
            margin-top:16px;
        }

        label {
            display:block;
            font-size:13px;
            color:#111827;
            margin-bottom:8px;
            font-weight:600;
        }

        input[type="email"],
        input[type="password"],
        .mp-input {
            width:100%;
            padding:12px 14px;
            border-radius:8px;
            border:1px solid rgba(17,24,39,0.08);
            background: #fff;
            font-size:14px;
            transition:box-shadow .15s, border-color .15s;
        }

        input:focus {
            outline:none;
            border-color: rgba(69,40,41,0.9);
            box-shadow: 0 6px 18px rgba(69,40,41,0.12);
        }

        .mp-actions {
            margin-top:20px;
        }

        .btn-primary {
            width:100%;
            padding:12px 14px;
            border-radius:8px;
            border:none;
            color:#fff;
            font-weight:700;
            background: linear-gradient(90deg,var(--main-color), var(--secondary-color));
            cursor:pointer;
            box-shadow: 0 8px 24px rgba(69,40,41,0.12);
            transition: transform .12s, box-shadow .12s;
            font-size:15px;
        }

        .btn-primary:active { transform: translateY(1px); }
        .btn-primary:hover { box-shadow: 0 12px 32px rgba(69,40,41,0.16); }

        .mp-note {
            margin-top:12px;
            font-size:13px;
            color:var(--accent-color);
            text-align:center;
        }

        .mp-footer {
            margin-top:20px;
            text-align:center;
            font-size:13px;
            color:var(--accent-color);
        }

        .validation-summary, .error-message {
            background: var(--error-bg);
            border: 1px solid var(--error-border);
            padding:12px;
            border-radius:8px;
            color:#991b1b;
            font-size:13px;
            margin-top:12px;
        }

        .test-credentials {
            margin-top:18px;
            padding:12px;
            border-radius:8px;
            background: var(--container-color);
            font-size:13px;
            color:var(--accent-color);
            border: 1px dashed rgba(17,24,39,0.04);
        }

        .muted-link {
            color: var(--secondary-color);
            text-decoration:none;
            font-weight:600;
        }

        @media (max-width:520px){
            .mp-login{ padding:20px; }
            .mp-brand{ width:44px;height:44px; font-size:16px; }
        }
    </style>
</head>
<body>
    <div class="mp-login" role="main" aria-labelledby="login-heading">
        <div class="mp-header">
            <div class="mp-brand">MP</div>
            <div class="mp-title">
                <h1 id="login-heading">MarketPlace</h1>
                <p>Sign in to your account</p>
            </div>
        </div>

        <form method="post" asp-controller="Account" asp-action="Login" novalidate>
            <input type="hidden" asp-for="ReturnUrl" />

            <div asp-validation-summary="All" class="validation-summary" role="alert" aria-live="polite"></div>

            <div class="field">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" placeholder="name@company.com" autofocus required />
            </div>

            <div class="field">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" placeholder="••••••••" required />
                <span asp-validation-for="Password" class="text-danger" style="color:#b91c1c;font-size:13px;"></span>
            </div>

            <div class="mp-actions">
                <button type="submit" class="btn-primary">Sign In</button>
            </div>
        </form>

        <div class="test-credentials" aria-hidden="false">
            <strong style="color:var(--primary-1); display:block; margin-bottom:6px;">Test Mode</strong>
            <div>Use any development credentials:</div>
            <div style="margin-top:6px;">Username: <code style="background:#fff;padding:2px 6px;border-radius:4px;color:var(--primary-2);">testuser</code></div>
            <div style="margin-top:4px;">Password: <code style="background:#fff;padding:2px 6px;border-radius:4px;color:var(--primary-2);">password</code></div>
            <div style="margin-top:8px;color:var(--muted);font-size:12px;"><em>* Non-empty values accepted in dev</em></div>
        </div>

        <div class="mp-footer">
            <p>
                Don't have an account?
                <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="muted-link">Register</a>
            </p>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
